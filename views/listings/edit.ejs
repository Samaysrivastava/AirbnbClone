<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <br>
    <h3>Edit listing</h3>
    <form 
        method="POST" 
        action = "/listings/<%=listing._id  %>?_method=PUT" 
        novalidate 
        class="needs-validation"
        enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input class="form-control" name="listings[title]" type="text" value="<%= listing.title %>"
             required/>
             <div class="invalid-feedback">Enter title</div>
        </div>
       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]" class="form-control"  type="text"  
            required><%= listing.title %></textarea>
            <div class="invalid-feedback">Enter description</div>

        </div>

        <div class="mb-3">
            <b><p>original image listing</p></b>
            <img 
            src="<%= originalImageUrl %>" 
            alt="img" 
            style="max-width: 100px; max-height: 100px; width: auto; height: auto;" 
            />
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">New Image link</label>
            <input 
            class="form-control" 
            name="listings[image]" 
            type="file"
            />
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input class="form-control"  name="listings[price]" type="number" value="<%=listing.price  %>" placeholder="enter price" required/>
                <div class="invalid-feedback">Enter country</div>
            </div>
        
            <div class="mb-3 col-8">
                <label for="counntry" class="form-label">Country</label>

                <input class="form-control" name="listings[country name]" value="<%=listing.country  %>" type="text" placeholder="enter country name" required/>
                <div class="invalid-feedback">Enter country</div>
            </div>
        </div>
    
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input class="form-control" name="listings[location]" type="text" value="<%=listing.location  %>" placeholder="enter location" required/>
            <div class="invalid-feedback">Enter location</div>
            

        </div>
        
      
        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
        
    </form>
 </div>
</div>
